{
    "include": [
        "./src"
    ],
    "compilerOptions": {
        "outDir": "./built",
        "rootDir": "./src",
        "skipLibCheck": true,
        "target": "esnext",
        "module": "commonjs",
        "lib": ["esnext"],
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "composite": true,
        "strict": true,
        "strictNullChecks": false,
        "moduleResolution": "node",
        "esModuleInterop": true,
    }
}